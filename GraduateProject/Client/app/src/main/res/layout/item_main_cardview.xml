<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_dark"
        android:layout_height="wrap_content"
        android:layout_margin="3dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:id="@+id/imageView_main_cardview"
                android:scaleType="fitXY"
                android:layout_height="200dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/title_main_cardview"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="TextView"
                    android:layout_height="wrap_content"
                    android:id="@+id/resisterater_main_cardview"
                    android:layout_alignBottom="@+id/cardView"
                    android:layout_alignStart="@+id/cardView"
                    android:layout_width="100dp" />

                <TextView
                    android:text="V"
                    android:layout_height="wrap_content"
                    android:id="@+id/view_main_cardview"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="20dp"
                    app:srcCompat="@drawable/view"
                    android:id="@+id/imageView2"
                    android:layout_weight="1"
                    android:layout_alignParentTop="true"
                    android:layout_toStartOf="@+id/view_main_cardview" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>